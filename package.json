{
  "name": "ActR",
  "version": "0.2.0",
  "description": "An easy-to-use action creator for Redux",
  "main": "dist/actr.js",
  "author": "Adam Lind <sunboxnet@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Pharserror/ActR",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pharserror/ActR.git"
  },
  "keywords": [
    "Action",
    "Flux",
    "React",
    "Redux"
  ],
  "ignore": [
    "**/.*",
    "node_modules",
    "test",
    "tests"
  ],
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "testRegex": "/test/",
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "babel-jest": "21.2.0",
    "jest": "21.2.1",
    "jest-cli": "21.2.1"
  },
  "dependencies": {
    "@babel/core": "7.1.2",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-stage-0": "7.0.0",
    "webpack": "4.24.0"
  }
}
